<div class="row">
  <div class="col l12">
  <h2>Products for sale</h2>
  <%= link_to new_post_path, class: 'btn-floating btn-large waves-effect waves-light right add-post' do %>
     <i class="material-icons">add</i>
  <% end %>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <% @posts.each do |post| %>
      <ul class="collection">
        <li class="collection-item">
          <p><strong><%= link_to post.product, post %></strong></p>
          <small>
            submitted <%= time_ago_in_words(post.created_at) %> <br>
            <%= post.comments.count %> <% if post.comments.count < 2 %>Comment <% else %>Comments<% end %>
          </small>
          <div class="right">
            <%= image_tag(@post.image.thumb.url) if post.image? %>
          </div>
        </li>
        </ul>
    <% end %>
    <%= will_paginate @posts %>
  </div>
</div>